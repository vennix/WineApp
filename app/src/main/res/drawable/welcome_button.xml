<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="@color/light_brown" />
            <gradient android:angle="90" android:startColor="@color/brown" android:endColor="@color/dark_brown"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="2dip" android:color="@color/dark_brown" />
            <solid android:color="#750508"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="2dip" android:color="@color/light_brown" />
            <gradient android:angle="-90" android:startColor="@color/brown" android:endColor="@color/dark_brown" />
        </shape>
    </item>
</selector>