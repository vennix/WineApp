<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="vennix.tk.wijngilde">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/wine_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        >
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.WineActivity"
            android:label="WineActivity" >
            <intent-filter>
                <action android:name="vennix.tk.wijngilde.activities.WineActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MemberActivity"
            android:label="WineDetailActivity" >
            <intent-filter>
                <action android:name="vennix.tk.wijngilde.activities.MemberActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.EventActivity"
            android:label="WineDetailActivity" >
            <intent-filter>
                <action android:name="vennix.tk.wijngilde.activities.EventActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.EventDetailActivity"
            android:label="WineDetailActivity" >
            <intent-filter>
                <action android:name="vennix.tk.wijngilde.activities.EventDetailActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.KindActivity"
            android:label="WineDetailActivity" >
            <intent-filter>
                <action android:name="vennix.tk.wijngilde.activities.KindActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>
</manifest>